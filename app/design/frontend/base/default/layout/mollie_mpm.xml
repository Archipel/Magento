<layout version="0.1.0">
    <mpm_api_redirect>
        <reference name="head">
            <action method="addCss" ifconfig="payment/mollie/active">
                <stylesheet>mollie/mpm/style.css</stylesheet>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/empty.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="setTitle">
                <title>Redirecting to Mollie</title>
            </action>
        </reference>
        <reference name="content">
            <block type="mpm/loading" name="mollie_loading" template="mollie/mpm/loading.phtml">
                <action method="unsetData">
                    <key>cache_lifetime</key>
                </action>
                <action method="unsetData">
                    <key>cache_tags</key>
                </action>
            </block>
        </reference>
    </mpm_api_redirect>

    <sales_order_view>
        <reference name="order_totals">
            <block type="mpm/adminhtml_sales_order_paymentFee" before="tax" name="mollie_mpm_payment_fee"/>
        </reference>
    </sales_order_view>

    <sales_order_print>
        <reference name="order_totals">
            <block type="mpm/adminhtml_sales_order_paymentFee" before="tax" name="mollie_mpm_payment_fee"/>
        </reference>
    </sales_order_print>

    <sales_order_invoice>
        <reference name="invoice_totals">
            <block type="mpm/adminhtml_sales_invoice_paymentFee" before="tax" name="mollie_mpm_payment_fee"/>
        </reference>
    </sales_order_invoice>

    <sales_order_printinvoice>
        <reference name="invoice_totals">
            <block type="mpm/adminhtml_sales_invoice_paymentFee" before="tax" name="mollie_mpm_payment_fee"/>
        </reference>
    </sales_order_printinvoice>

    <sales_order_creditmemo>
        <reference name="creditmemo_totals">
            <block type="mpm/adminhtml_sales_creditmemo_paymentFee" before="tax" name="mollie_mpm_payment_fee" />
        </reference>
    </sales_order_creditmemo>

    <sales_order_printcreditmemo>
        <reference name="creditmemo_totals">
            <block type="mpm/adminhtml_sales_creditmemo_paymentFee" before="tax" name="mollie_mpm_payment_fee" />
        </reference>
    </sales_order_printcreditmemo>

    <sales_email_order_items>
        <reference name="order_totals">
            <block type="mpm/adminhtml_sales_order_paymentFee" before="tax" name="mollie_mpm_payment_fee"/>
        </reference>
    </sales_email_order_items>

    <sales_email_order_invoice_items>
        <reference name="invoice_totals">
            <block type="mpm/adminhtml_sales_invoice_paymentFee" before="tax" name="mollie_mpm_payment_fee" />
        </reference>
    </sales_email_order_invoice_items>

    <sales_email_order_creditmemo_items>
        <reference name="creditmemo_totals">
            <block type="mpm/adminhtml_sales_creditmemo_paymentFee" before="tax" name="mollie_mpm_payment_fee" />
        </reference>
    </sales_email_order_creditmemo_items>

    <checkout_onepage_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>js/mollie/mpm/creditcard-components.js</name>
            </action>
            <action method="addCss" ifconfig="payment/mollie/active">
                <stylesheet>mollie/mpm/style.css</stylesheet>
            </action>
        </reference>

        <reference name="after_body_start">
            <block type="core/template" name="mollie_components_initialize" template="mollie/mpm/payment/after_body_start.phtml" />
        </reference>
    </checkout_onepage_index>
</layout>
