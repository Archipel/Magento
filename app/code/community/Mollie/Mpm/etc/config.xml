<config>
	<modules>
		<Mollie_Mpm>
			<version>3.13.0</version>
		</Mollie_Mpm>
	</modules>

	<global>
		<models>
			<mpm>
				<class>Mollie_Mpm_Model</class>
			</mpm>
		</models>
		<blocks>
			<mpm>
				<class>Mollie_Mpm_Block</class>
			</mpm>
			<payment>
				<class>Mollie_Mpm_Block</class>
				<class>Mage_Payment_Block</class>
			</payment>
		</blocks>
		<helpers>
			<mpm>
				<class>Mollie_Mpm_Helper</class>
			</mpm>
		</helpers>
		<payment>
			<groups>
				<mollie>mollie</mollie>
			</groups>
		</payment>
		<resources>
			<mpm_setup>
				<setup>
					<module>Mollie_Mpm</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</mpm_setup>
			<mpm_write>
				<connection>
					<use>core_write</use>
				</connection>
			</mpm_write>
			<mpm_read>
				<connection>
					<use>core_read</use>
				</connection>
			</mpm_read>
		</resources>
		<layouts>
			<mollie_exception>
				<label>Mollie Exception</label>
				<template>mollie/page/exception.phtml</template>
			</mollie_exception>
			<idl_payment_fail>
				<label>Payment Failed</label>
				<template>mollie/page/payment_fail.phtml</template>
			</idl_payment_fail>
		</layouts>
	</global>

	<frontend>
		<routers>
			<mpm>
				<use>standard</use>
				<args>
					<module>Mollie_Mpm</module>
					<frontName>mpm</frontName>
				</args>
			</mpm>
		</routers>
		<layout>
			<updates>
				<mpm>
					<file>mpm.xml</file>
				</mpm>
			</updates>
		</layout>
	</frontend>

	<adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<mollie>
											<title>Mollie Betaal Methode(s)</title>
										</mollie>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<mpm>
					<file>mpm.xml</file>
				</mpm>
			</updates>
		</layout>
	</adminhtml>

	<default>
		<payment>
			<mpm_idl>
				<group>mollie</group>
				<active>1</active>
				<model>mpm/idl</model>
				<title>iDEAL</title>
				<currency>EUR</currency>
			</mpm_idl>
		</payment>
	</default>
</config>